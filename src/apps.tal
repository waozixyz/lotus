	03 "Color $1
		12 00 :expand-win "Expand $1
		22 00 :tab-win "Tab $1
		42 00 :close-win "Close $1
	04 "Select $1
		00 '1 :select-color1 "Background $1
		00 '2 :select-color2 "Color1 $1
		00 '3 :select-color3 "Color2 $1
		00 '4 :select-color4 "Color3 $1
	$1

@app-color
	:color-manifest
	:&on-draw
	:&on-mouse

&on-mouse ( x* y* win* -> )

	POP2 POP2 POP2

BRK

&on-draw ( win* -- )

	POP2

	( sliders )

	( swatches )
	;draw-swatches JSR2

JMP2r

